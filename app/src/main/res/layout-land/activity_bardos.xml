<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bar2">

    <Button
        android:id="@+id/regresar"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#8BC7F6"
        android:textColor="#F8F2F2"
        app:drawableLeftCompat="?attr/actionModeCloseDrawable"
        tools:ignore="MissingConstraints">
    </Button>


    <TextView
        android:id="@+id/textGrid"
        android:layout_width="475dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="CervecerÃ­a Chapultepec"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="153dp"
        android:layout_marginBottom="84dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:background="#E9F9FB"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText5"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:text="@string/texto34"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="271dp"
                android:layout_height="match_parent"
                android:text="La Chapultepec"
                android:textColor="@color/black"
                android:textSize="25dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="15dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:background="#E9F9FB"
            android:orientation="horizontal">

            <TextView
                android:layout_width="126dp"
                android:layout_height="match_parent"
                android:text="@string/texto27"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="255dp"
                android:layout_height="match_parent"
                android:text="4491234567"
                android:textColor="@color/black"
                android:textSize="25dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"

            android:layout_height="15dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:background="#E9F9FB"
            android:orientation="horizontal">

            <TextView

                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:text="@string/texto28"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="242dp"
                android:layout_height="match_parent"
                android:text="@string/texto33"
                android:textColor="@color/black"
                android:textSize="25dp" />


        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="256dp"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/barr2">

    </ImageView>

    <Button
        android:id="@+id/Mapa"
        android:layout_width="91dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/texto35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="InvalidId,MissingConstraints" />

    <Button
        android:id="@+id/promociones"
        android:layout_width="164dp"
        android:layout_height="54dp"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="16dp"
        android:text="@string/texto36"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="InvalidId,MissingConstraints" />

    <Button
        android:id="@+id/btn_dial"
        android:layout_width="104dp"
        android:layout_height="54dp"
        android:layout_marginStart="304dp"
        android:layout_marginBottom="16dp"
        android:text="@string/texto32"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="InvalidId,MissingConstraints" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        tools:ignore="MissingConstraints" />

    <EditText
        android:visibility="invisible"
        android:id="@+id/et_phone_no"
        android:hint="Numero"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>